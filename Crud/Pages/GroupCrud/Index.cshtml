@page
@model Crud.Pages.GroupCrud.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Groups</h1>
<br /><br />
<p>
    <a asp-page="Create" class="btn btn-primary">Create <i class=" fas fa-add"> </i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Group[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Group) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            <td>
                <a class="btn btn-success" asp-page="./Edit" asp-route-id="@item.Id"><i class="fas fa-edit"> </i></a>
                <a class ="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id"><i class="fas fa-trash"> </i></a>
                <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@item.Id"><i class="fas fa-circle-info"></i></a>

            </td>
        </tr>
}
    </tbody>
</table>
