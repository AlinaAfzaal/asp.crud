@page
@model Crud.Pages.CategoryCrud.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>
<br /><br />
<p>
    <a asp-page="Create"class="btn btn-primary">Create <i class="fas fa-add"></i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Category) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group)
            </td>
            
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-success"><i class="fas fa-edit"></i></a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-secondary"><i class="fas fa-circle-info"></i></a>

            </td>
        </tr>
}
    </tbody>
</table>
