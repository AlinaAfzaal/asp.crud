@page
@model Crud.Pages.CategoryCrud.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Delete Category</h3>
<div>

    <br />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Group)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Group)
        </dd>
    </dl>

    @if (Model.listProducts != null && Model.listProducts.Count!=0)
    {
        int i = 1;

        <h5>Category Records</h5>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Sr. 
                    </th>
                    <th>
                       Product Id
                    </th>
                    <th>
                        Product Name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.listProducts)
                {

                    <tr>
                        <td>
                            @i
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.Name)
                        </td>                     

                    </tr>
                    i = i + 1; 
                }
            </tbody>
        </table>
    }

    <br /><br />    
    <form method="post">
        <input type="hidden" asp-for="Category.Id" />
        @if(Model.listProducts.Count>0){

            <div class="form-check">
                <input asp-for="@Model.deleteCheck" class="form-check-input" type="checkbox" id="deleteCheck" name="deleteCheck">
                <label class="form-check-label text-danger" for="deleteCheck">Delete all records</label>
            </div>
        }
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index"class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <script>
        var focusCheckbox = @(TempData["FocusCheckbox"] ?? "false");
        if (focusCheckbox) {
            document.getElementById('deleteCheck').focus();
        }
    </script>
}