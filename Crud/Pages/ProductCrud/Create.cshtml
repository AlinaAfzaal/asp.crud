@page
@model Crud.Pages.ProductCrud.CreateModel
using Crud.Pages.ProductCrud
@{
    ViewData["Title"] = "Create";
}

<h3>Create Product</h3>

<br />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Category" class="control-label"></label>
                <Select asp-for="Product.Category" asp-items="@(new SelectList(Model.CategoryList, "Value", "Text"))" class="form-control"> </Select>
                <span asp-validation-for="Product.Category" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success"/>
                <a asp-page="Index"class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
